# =============================================================================
# FormForge Configuration
# Copy this file to .env and customize the values below.
# All variables are prefixed with FORMFORGE_ to avoid collisions.
# =============================================================================

# -- Application --------------------------------------------------------------
# Enable debug mode (verbose SQL logging, etc.). Never enable in production.
FORMFORGE_DEBUG=false

# Secret key used to sign JWT tokens. MUST be changed to a random string.
# Generate one with: python -c "import secrets; print(secrets.token_urlsafe(64))"
FORMFORGE_SECRET_KEY=change-me-to-a-random-string

# Public-facing URL of the app (used in embeddable snippets and emails).
FORMFORGE_BASE_URL=http://localhost:8000

# -- Database -----------------------------------------------------------------
# Async SQLAlchemy connection string. Default uses a local SQLite file.
FORMFORGE_DATABASE_URL=sqlite+aiosqlite:///./formforge.db

# -- Email (SMTP) -------------------------------------------------------------
# SMTP server for sending submission notifications.
# Leave SMTP_HOST empty to disable email notifications entirely.
FORMFORGE_SMTP_HOST=
FORMFORGE_SMTP_PORT=587
FORMFORGE_SMTP_USER=
FORMFORGE_SMTP_PASSWORD=
FORMFORGE_SMTP_FROM_EMAIL=noreply@formforge.dev
FORMFORGE_SMTP_USE_TLS=true

# -- Rate Limiting ------------------------------------------------------------
# Maximum form submissions allowed per IP per form per minute.
FORMFORGE_SUBMISSIONS_PER_MINUTE=10

# -- Docker Compose -----------------------------------------------------------
# Host port to bind (only used by docker-compose.yml).
FORMFORGE_PORT=8000
